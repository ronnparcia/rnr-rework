{##
 #  @file home.twig
 #  @desc This is the template file for the home page of the Rant and Rave website. 
 #        It displays a list of posts.
 #}

{# Extend the base template #}
{% extends "base.twig" %}

{# Set the title of the page #}
{% block title %}Home{% endblock %}

{# Set the content of the page #}
{% block content %}
    <h1>Home</h1>

    <h2>Latest</h2>
    {# Loop through the posts and display their titles #}
    <ul>
        {% for post in latestPosts %}
            <li>{{ post["title"]["rendered"] }}</li>
        {% endfor %}
    </ul>

    {% for category, posts in categoryPosts %}
        <h2>{{ category|capitalize }}</h2>
        <ul>
            {% for post in posts %}
                <li>{{ post["title"]["rendered"] }}</li>
            {% endfor %}
        </ul>
        <a href="{{ path_for('category', { 'category': category }) }}">More</a>
    {% endfor %}
{% endblock %}